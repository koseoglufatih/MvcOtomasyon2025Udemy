@model MvcOtomasyon2025Udemy.Models.ShipmentDetail
@{
    ViewBag.Title = "AddShipment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>New Shipment Details Page</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TrackingCode)
    <input type="text" value="@ViewBag.code" class="form-control"  readonly name="TrackingCode"/>
    <br />
    @Html.LabelFor(x => x.Employee)
    @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Buyer)
    @Html.TextBoxFor(x => x.Buyer, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    <input class="form-control" type="date" name="Date" />
    <br />
    @Html.LabelFor(x => x.Explanation)
    @Html.TextAreaFor(x => x.Explanation, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Save</button>
</form>
