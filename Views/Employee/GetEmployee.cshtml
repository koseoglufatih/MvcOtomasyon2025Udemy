@model MvcOtomasyon2025Udemy.Models.Employee
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Personel Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.PersonelID)
        @Html.LabelFor(x => x.PersonelName)
        @Html.TextBoxFor(x => x.PersonelName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.PersonelSurName)
        @Html.TextBoxFor(x => x.PersonelSurName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.EmployeeVisiual)
        @Html.TextBoxFor(x => x.EmployeeVisiual, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Department)
        @Html.DropDownListFor(x => x.DepartmentID, (List<SelectListItem>)ViewBag.result1, new { @class = "form-control" })
        <br />
        <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>
    </div>
}



