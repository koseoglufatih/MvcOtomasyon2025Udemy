@using MvcOtomasyon2025Udemy.Models
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.InvoiceID</td>
            <td>@k.InvoiceSerialNumber</td>
            <td>@k.InvoiceSequenceNumber</td>
            <td>@k.TaxOffice</td>
            <td>@k.Date</td>
            <td>@k.Hour</td>
            <td>@k.Deliverer</td>
            <td>@k.Recipient</td>
            <td>@k.Total</td>




            <td><a href="/Invoice/GetInvoice/@k.InvoiceID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Invoice/InvoiceItem/@k.InvoiceID" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Invoice/AddInvoice" class="btn btn-info">Yeni Fatura Girişi </a>



