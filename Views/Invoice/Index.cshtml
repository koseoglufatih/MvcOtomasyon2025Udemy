@using MvcOtomasyon2025Udemy.Models
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Seri - Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.InvoiceSerialNumber @k.InvoiceSequenceNumber</td>
            <td>@k.Date</td>
            <td>@k.Hour</td>
            <td>@k.Total ₺</td>




            <td><a href="/Invoice/GetInvoice/@k.InvoiceID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Invoice/InvoiceItem/@k.InvoiceID" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>
            <td><a href="/Invoice/InvoiceItem/@k.InvoiceID" class="btn btn-default" style="background-color:thistle; color:white"> Kalem</a></td>

        </tr>
    }
</table>
<a href="/Invoice/AddInvoice" class="btn btn-info">Yeni Fatura Girişi </a>
<br /><br />
<button type="button" class="btn btn-warning" style="background-color:tomato; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                    <tr>
                        <td>@x.InvoiceSerialNumber</td>
                        <td>@x.InvoiceSequenceNumber</td>
                        <td>@x.Total</td>
                    </tr>
                    }

                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>



