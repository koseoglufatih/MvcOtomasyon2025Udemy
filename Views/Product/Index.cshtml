@using MvcOtomasyon2025Udemy.Models
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
@using(Html.BeginForm("Index","Product",FormMethod.Get))
            {
                <p>
                    Ürün Adı: @Html.TextBox("p")
                    <input type="submit" value="Ara"/>
                </p>
            }
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT </th>
        <th>SATIŞ FİYAT </th>
        <th>KATEGORi</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductName</td>
            <td>@p.Brand</td>
            <td>@p.Stock</td>
            <td>@p.PurchasePrice ₺</td>
            <td>@p.SalePrice ₺</td>
            <td>@p.Category.CategoryName</td>
            <td>
                <a href="/Product/DeleteProduct/@p.ProductID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Product/GetProduct/@p.ProductID" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Product/MakeASale/@p.ProductID" class="btn btn-default" style="background-color:aqua">Satış Yap</a>
            </td>
        </tr>
    }
</table>
<a href="/Product/AddProduct/" class="btn btn-info">Yeni Ürün</a>
