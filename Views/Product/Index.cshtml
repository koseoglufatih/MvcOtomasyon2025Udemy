@using MvcOtomasyon2025Udemy.Models
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORi</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductID</td>
            <td>@p.ProductName</td>
            <td>@p.Brand</td>
            <td>@p.Stock</td>
            <td>@p.PurchasePrice</td>
            <td>@p.SalePrice</td>
            <td>@p.Category.CategoryName</td>
            <td>@p.ProductImage</td>
            <td>
                <a href="/Product/DeleteProduct/@p.ProductID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Product/GetProduct/@p.ProductID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Product/AddProduct/" class="btn btn-info">Yeni Ürün</a>
